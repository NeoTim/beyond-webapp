{
	"replaceConsole": true,
	"appenders": [{
		"type": "console"
	}, {
		"type": "logLevelFilter",
		"level": "WARN",
		"appender": {
			"type": "file",
			"filename": "logs/error.log",
			"maxLogSize": 20480,
			"backups": 3
		}
	}, {
		"type": "logLevelFilter",
		"level": "ALL",
		"appender": {
			"type": "file",
			"filename": "logs/all.log",
			"maxLogSize": 20480,
			"backups": 3
		}
	}, {
		"type": "file",
		"filename": "logs/access.log",
		"maxLogSize": 20480,
		"backups": 3,
		"category": "access",
		"format": ":remote-addr :response-time - [:date] ':method :url HTTP/:http-version' :status :content-length ':referrer' ':user-agent'"
	}, {
		"type": "file",
		"filename": "logs/bss.log",
		"maxLogSize": 20480,
		"backups": 3,
		"category": ["bssService.js"]
	}, {
		"type": "file",
		"filename": "logs/sms.log",
		"maxLogSize": 20480,
		"backups": 3,
		"category": ["sgipService.js","libs/sms/send.js","libs/sms/receive.js"]
	}, {
		"type": "file",
		"filename": "logs/wechat.log",
		"maxLogSize": 20480,
		"backups": 3,
		"category": ["wechatService.js","routes/protect.platform.wechat.js","routes/protect.platform.wechat.qrcode.js"]
	}],
	"levels": {
		"access": "INFO",
		"sgipService.js": "INFO",
		"libs/sms/send.js": "DEBUG",
		"libs/sms/receive.js": "DEBUG",
		"routes/_platform.wechat.js": "DEBUG",
		"routes/_platform.wechat.qrcode.js": "DEBUG",
		"commands/updateWechatAccessToken.js": "DEBUG"
	}
}