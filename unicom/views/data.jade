doctype html

html(lang="zh-CN")
	head
		//- include include/head
		title 沃助手
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui")
		meta(name="apple-mobile-web-app-status-bar-style" content="yes")
		link(rel="stylesheet" href="/css/app.css")
		style.
			 #mcover {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: rgba(0, 0, 0, 0.7);
				//display: none;
				z-index: 20000;
			 }
			 #mcover img {
				position: fixed;
				right: 18px;
				top: 5px;
				width: 260px!important;
				height: 180px!important;
				z-index: 20001;
			 }
		script(src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js")
	body
		div#mcover(onclick="weChat()", style="display:none;")
			img(src="/images/weixin_guide.png")
		div.app
			div.app-body
				div.app-content
					div.scrollable
						div.scrollable-content.section
							form#addSaleLead(method="POST", action="http://localhost:8092/sale/leads")
								div.panel.panel-default
									div.panel-heading
										h4.panel-title.text-center 数据产品
									div.panel-body
										p 内容
										div.panel.panel-default
											div.panel-heading
												h4.panel-title.text-center 申请订购
											div.panel-body
												div.form-group
													label 姓名：
													input.form-control(type="text" name="name")
													span.help-block
												div.form-group
													label 手机号码：
													input.form-control(type="text" name="phone")
													span.help-block
										input.btn.btn-primary.btn-block(type="submit" value="确认申请")
							hr
							div.btn-group.btn-group-justified
								div.btn-group
									button.btn.btn-default(onclick="share_to_frend()")
										img(src="/images/tofriend.png" width="32" height="32")
										span 发送给朋友
								div.btn-group
									button.btn.btn-default(onclick="share_to_frend()")
										img(src="/images/tofriends.png" width="32" height="32")
										span 分享到朋友圈
							p &nbsp;
							p &nbsp;
							p &nbsp;
		script.
			wx.config({
				debug: true,
				appId: '#{config.appid}',
				timestamp: #{config.timestamp},
				nonceStr: '#{config.nonceStr}',
				signature: '#{config.signature}',
				jsApiList: ['onMenuShareTimeline','onMenuShareAppMessage']
			});
			wx.ready(function(){
				wx.onMenuShareAppMessage({
					title: '#{shareMessage.title}',
					desc: '#{shareMessage.desc}',
					link: '#{shareMessage.link}', 
					imgUrl: '#{shareMessage.imgUrl}', 
					type: '#{shareMessage.type}', 
					dataUrl: '#{shareMessage.dataUrl}',
					success: function () { 
					// 用户确认分享后执行的回调函数
					},
					cancel: function () { 
					// 用户取消分享后执行的回调函数
					}
				});
				wx.onMenuShareTimeline({
					title: '#{shareMessage.title}',
					link: '#{shareMessage.link}', 
					imgUrl: '#{shareMessage.imgUrl}',
					success: function () { 
					// 用户确认分享后执行的回调函数
					},
					cancel: function () { 
					// 用户取消分享后执行的回调函数
					}
				});
			});
		script(src="http://libs.baidu.com/jquery/1.9.0/jquery.js")
		script.
			function share_to_frend(){
			$("#mcover").css("display","block")    // 分享给好友按钮触动函数
			}
			function share_to_frends(){
			$("#mcover").css("display","block")  // 分享给好友圈按钮触动函数
			}
			function weChat(){
			$("#mcover").css("display","none");  // 点击弹出层，弹出层消失
			}
