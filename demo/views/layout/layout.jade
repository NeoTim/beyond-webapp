doctype html

html(lang="zh-CN")
	head
		title SocialWork - 您的私密工作社交网
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui")
		meta(name="apple-mobile-web-app-status-bar-style" content="yes")
		link(rel="stylesheet" href="/css/app.css")
	body.has-sidebar-left.has-sidebar-right.has-navbar-top
		.sidebar.sidebar-left
			.scrollable(style="padding-top:70px;")
				.scrollable-header.app-name
					a(href="#" onclick="window.location.href='/'") 我的工作社交网
					a.pull-right(href="#" onclick="window.location.href='/#project/add'")
						i.fa.fa-plus-square 项目
				.scrollable-content
					.list-group
						a.list-group-item.active(href="#" onclick="window.location.href='/#index'") 主页
							i.fa.fa-chevron-right.pull-right
						a.list-group-item(href="#" onclick="window.location.href='/#activity/me'") 朋友圈
							i.fa.fa-chevron-right.pull-right
						a.list-group-item(href="#" onclick="window.location.href='/#profile/me'") 我的资料
							i.fa.fa-chevron-right.pull-right
					#projectlist
		.sidebar.sidebar-right
			.scrollable(style="padding-top:70px;")
				.scrollable-header.app-name 我的好友
					a.pull-right(href="#" onclick="window.location.href='/#contact/me'")
						i.fa.fa-search 管理
				.scrollable-content
					#chat.list-group
						a.list-group-item.media(href="#")
							.pull-left
								i.fa.fa-user.chat-user-avatar
							.media-body
								h5.media-heading 用户名
								small
									span.label.label-default
										i 离线
		.app
			.navbar.navbar-app.navbar-absolute-top
				.navbar-brand.navbar-brand-center 登录
				.btn.btn-group.pull-left.hidden
					i.fa.fa-bars 菜单
				//- .btn.btn-group.pull-right
					i.fa.fa-comments 聊天
			//- .navbar.navbar-app.navbar-absolute-bottom
